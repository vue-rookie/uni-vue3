  "easycom": {
    "autoscan": true,
    "custom": {
      "^uve-(.*)": "@/components/uve-$1/index.vue",
      "^xhs-(.*)": "@/components/xhs-$1/index.vue"
    }
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#ff2442",
    "backgroundColor": "#ffffff",
    "borderStyle": "white",
    "height": "50px",
    "fontSize": "10px",
    "iconWidth": "24px",
    "spacing": "3px",
    "list": [
      {
        "iconPath": "static/tabbar/home.png",
        "selectedIconPath": "static/tabbar/home-active.png",
        "pagePath": "pages/home/index",
        "text": "首页"
      },
      {
        "iconPath": "static/tabbar/discovery.png",
        "selectedIconPath": "static/tabbar/discovery-active.png",
        "pagePath": "pages/discovery/index",
        "text": "发现"
      },
      {
        "iconPath": "static/tabbar/publish.png",
        "selectedIconPath": "static/tabbar/publish-active.png",
        "pagePath": "pages/publish/index",
        "text": "发布"
      },
      {
        "iconPath": "static/tabbar/message.png",
        "selectedIconPath": "static/tabbar/message-active.png",
        "pagePath": "pages/message/index",
        "text": "消息"
      },
      {
        "iconPath": "static/tabbar/profile.png",
        "selectedIconPath": "static/tabbar/profile-active.png",
        "pagePath": "pages/profile/index",
        "text": "我"
      }
    ]
  },
  "pages": [
    {
